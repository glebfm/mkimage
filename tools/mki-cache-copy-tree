data_tree="${COPY_TREE:?Data tree required}"

payload() {
	payload_makefile

	local d dir
	for dir in $data_tree; do
		d="$(readlink -ve "$dir")" ||
			fatal "$dir: not available."

		if [ -d "$d" ]; then
			payload_directory_state "$d"
		else
			payload_file_state "${d%/*}" "${d##*/}"
		fi
	done
}
